{
  "extends": [
    "hypothesis",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": "off",
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": ["error", { "destructuring": "all" }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "settings": {
    "react": {
      "pragma": "createElement",
      "version": "16.8"
    }
  }
}
